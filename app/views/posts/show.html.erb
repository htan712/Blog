<div id="post-show-content" class="skinny-wrapper wrapper-padding">
    <header>
        <h1><%= @post.title %></h1>
        <p class="date"><%= @post.created_at.strftime("%A-%b-%d") %></p>
        <%= link_to "Edit", edit_post_path(@post) %>
        <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this? "} %>
        <hr>
    </header>
    <div id="content">
        <%= markdown @post.content %>
    </div>
    <hr>
    <div id="share-box">
        <p>Share:</p>
        <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @Hock712 - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=207, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
        <a onclick="javascript:window.open('http://www.facebook.com/share?php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=207, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
        <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=207, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
    </div>
    <hr>
</div>
<br>

