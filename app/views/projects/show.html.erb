<div id="post-show-content" class="skinny-wrapper wrapper-padding">
    <header>
        <h1><%= @project.title %></h1>
        <p class="date"><%= @project.created_at.strftime("%A-%b-%d") %></p>
        <%= link_to "Edit", edit_project_path(@project) %>
        <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this? "} %>
        <hr>
    </header>
    <div id="content">
        <%= markdown @project.description %>
        <div class="button-wrapper">
            <a href="<%= @project.link%>" class="project-button" target="_blank">Visit <%= @project.title %></a>
        </div>
    </div>
    <hr>
</div>
<br>

